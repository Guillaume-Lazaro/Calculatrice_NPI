<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="end"
    tools:context="fr.codevallee.formation.tp10.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_stack4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/tv_stack3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/tv_stack2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/tv_stack1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tv_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:text=""/>

        <GridLayout
            android:id="@+id/gl_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="3">

            <Button/>

            <Button/>

            <Button/>

            <Button/>

            <Button/>

            <Button/>

            <Button/>

            <Button/>

            <Button/>

            <Button/>
        </GridLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_mult"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:text="x"/>

        <Button
            android:id="@+id/button_add"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:text="+"/>

        <Button
            android:id="@+id/button_sub"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:text="-"/>

        <Button
            android:id="@+id/button_div"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:text="รท"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/button_clear"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/clear"/>

        <Button
            android:id="@+id/button_pop"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/pop"/>

        <Button
            android:id="@+id/button_swap"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/swap"/>

        <Button
            android:id="@+id/button_enter"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/enter"/>
    </LinearLayout>

</android.support.v7.widget.LinearLayoutCompat>
